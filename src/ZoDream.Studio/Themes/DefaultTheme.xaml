<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="PrimaryColor">white</Color>
    <Color x:Key="BodyColor">#f4f4f4</Color>
    <Color x:Key="PrimaryTextColor">#333</Color>
    <Color x:Key="SecondTextColor">#999</Color>
    <Color x:Key="BodyTextColor">#333</Color>
    <Color x:Key="HoverColor">#FFBEE6FD</Color>
    <Color x:Key="BorderColor">#ccc</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="SecondTextBrush" Color="{StaticResource SecondTextColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="BodyBrush" Color="{StaticResource BodyColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="BodyTextBrush" Color="{StaticResource BodyTextColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"></SolidColorBrush>
</ResourceDictionary>