<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="HeaderTb" TargetType="TextBlock">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="InputHeaderTb" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,5"/>
    </Style>
    <Style x:Key="InputCb" TargetType="ComboBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="InputTb" TargetType="TextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="MaxLines" Value="1"/>
    </Style>
    <Style x:Key="InputOther" TargetType="FrameworkElement">
        <Setter Property="Margin" Value="0,5"/>
    </Style>
</ResourceDictionary>